<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_mainscreen"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <GridLayout
        android:id="@+id/boardGrid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="8"
        android:rowCount="8"
        android:layout_gravity="center"
        android:layout_weight="1">

        <!-- Example of a single square (Button) -->
        <Button
            android:id="@+id/square_0_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/light_square"/>

        <Button
            android:id="@+id/square_0_1"
            android:layout_width="0dp"
            android:layout_height="374dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/dark_square" />

        <!-- Repeat the above Buttons for all 64 squares -->
    </GridLayout>

</LinearLayout>
